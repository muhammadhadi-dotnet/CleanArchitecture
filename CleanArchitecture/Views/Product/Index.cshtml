@model List<Product>
@{
}
<div class="container mt-5">
    <h3 class="mb-4">Product List</h3>
    <a asp-action="Create" class="btn btn-dark mb-2">Create New</a>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Category Name</th>
                @* <th>Created At</th> *@
                @* <th>Updated At</th> *@
                <th>Actions</th> <!-- New column -->
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Category.Name</td>
                    @* <td>@cat.CreatedAt</td> *@
                    @* <td>@cat.UpdatedAt</td> *@
                    <td>
                        <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-primary me-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
